number = {1109.4852},
shorttitle = {Cross-{\{}Correlation{\}} of spectroscopic and photometr},
title = {{Cross-{\{}Correlation{\}} of spectroscopic and photometric galaxy surveys: cosmology from lensing and redshift distortions}},
