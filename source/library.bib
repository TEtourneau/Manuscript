@article{leistedt_constraints_2014,
abstract = {We derive robust constraints on primordial non-Gaussianity (PNG) using the clustering of 800,000 photometric quasars from the Sloan Digital Sky Survey in the redshift range {\$}0.5{\textless}z{\textless}3.5{\$}. These measurements rely on the novel technique of extended mode projection to control the impact of spatially-varying systematics in a robust fashion, making use of blind analysis techniques. This allows the accurate measurement of quasar halo bias at the largest scales, while discarding as little as possible of the data. The standard local-type PNG parameters {\$}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\$} and {\$}g\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\$} both imprint a {\$}k{\{}\backslashtextasciicircum{\}}{\{}-2{\}}{\$} scale-dependent effect in the bias. Constraining these individually, we obtain {\$}-49{\textless}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL\backslash{\}}{\{}\backslashtextless{\}}31{\$} and {\$}-2.7{\{}\backslashtextbackslash{\}}times10{\{}\backslashtextasciicircum{\}}5{\textless}g\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL\backslash{\}}{\{}\backslashtextless{\}}1.9{\{}\backslashtextbackslash{\}}times10{\{}\backslashtextasciicircum{\}}5{\$}, while their joint constraints lead to {\$}-105{\textless}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL\backslash{\}}{\{}\backslashtextless{\}}72{\$} and {\$}-4.0{\{}\backslashtextbackslash{\}}times10{\{}\backslashtextasciicircum{\}}5{\textless}g\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL\backslash{\}}{\{}\backslashtextless{\}}4.9{\{}\backslashtextbackslash{\}}times10{\{}\backslashtextasciicircum{\}}5{\$} (all at 95{\%} CL) . Introducing a running parameter {\$}n{\_}{\{}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\}}{\$} to constrain {\$}b(k) {\{}\backslashtextbackslash{\}}propto k{\{}\backslashtextasciicircum{\}}{\{}-2+n{\_}{\{}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\}}{\}}{\$} and a generalised PNG amplitude $\backslash${\$}{\{}\backslashtextbackslash{\}}tilde{\{}f{\}}\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\$}, we obtain {\$}-45.5 {\{}\backslashtextbackslash{\}}exp({\{}3.7{\{}\backslashtextbackslash{\}}, n{\_}{\{}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\}}{\}}) {\textless}{\{}\backslashtextbackslash{\}}tilde{\{}f{\}}\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}} {\textless}34.4 {\{}\backslashtextbackslash{\}}exp({\{}3.3{\{}\backslashtextbackslash{\}}, n{\_}{\{}f\backslash{\_}{\{}\backslashtextbackslash{\}}mathrm{\{}NL{\}}{\}}{\}}){\$} at 95{\%} CL. These results incorporate uncertainties in the cosmological parameters, redshift distributions, shot noise, and the bias prescription used to relate the quasar clustering to the underlying dark matter. These are the strongest constraints obtained to date on PNG using a single population of large-scale structure tracers, and are already at the level of pre-Planck constraints from the cosmic microwave background. They demonstrate the importance of robustly mitigating systematics in order to exploit upcoming large scale structure surveys to probe the initial conditions of the universe.},
