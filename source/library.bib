@article{smee_multi-object_2013,
abstract = {We present the design and performance of the multi-object fiber 
spectrographs for the Sloan Digital Sky Survey (SDSS) and their upgrade
for the Baryon Oscillation Spectroscopic Survey (BOSS). Originally
commissioned in Fall 1999 on the 2.5 m aperture Sloan Telescope at
