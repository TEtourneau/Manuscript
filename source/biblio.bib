author = {McDonald, Patrick and Eisenstein, Daniel J},
doi = {10.1103/PhysRevD.76.063009},
eprint = {0607122},
file = {:Users/tetourne/Library/Application Support/Mendeley Desktop/Downloaded/Mcdonald, Eisenstein - Unknown - Dark energy and curvature from a future baryonic acoustic oscillation survey using the Lyman-forest.pdf:pdf},
issn = {15507998},
journal = {Physical Review D - Particles, Fields, Gravitation and Cosmology},
number = {6},
primaryClass = {astro-ph},
title = {{Dark energy and curvature from a future baryonic acoustic oscillation survey using the Lyman-$\alpha$ forest}},
url = {https://journals.aps.org/prd/pdf/10.1103/PhysRevD.76.063009},
