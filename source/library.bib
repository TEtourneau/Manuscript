journal = {{\{}$\backslash$textbackslash{\}}apj},
keywords = {Conduction,GALAXIES: EVOLUTION,GALAXIES: FORMATION,Galaxies: Cooling Flows,Galaxies: Luminosity Function,Mass Function},
pages = {38--49},
title = {{What {\{}Shapes{\}} the {\{}Luminosity{\}} {\{}Function{\}} of {\{}Galaxies{\}}?}},
